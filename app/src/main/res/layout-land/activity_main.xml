<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <GridLayout
            android:columnCount="4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <!--  Title -->
            <TextView
                android:layout_columnSpan="4"
                android:layout_marginLeft="300dp"
                android:fontFamily="tahoma"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@string/app_title"/>

            <!--  Separator -->
            <Space android:layout_marginBottom="20dp"
                android:layout_columnSpan="4"/>

            <!--  Row No. 1 -->
            <Space
                android:layout_marginLeft="210dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/logo_design"
                android:layout_column="1" />
            <EditText
                android:id="@+id/etxLogoDesign"
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="160dp"
                android:layout_column="3" />

            <!--  Row No. 2 -->
            <Space
                android:layout_marginLeft="210dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/web_hosting"
                android:layout_column="1" />
            <EditText
                android:id="@+id/etxWebHosting"
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginLeft="160dp"
                android:layout_column="3" />

            <!--  Row No. 2 -->
            <Space
                android:layout_marginLeft="40dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/domain_registration"
                android:layout_column="1" />
            <EditText
                android:id="@+id/etxDomainRegistration"
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="50dp"
                android:layout_column="3" />

            <!--  Row No. 3 -->
            <Space
                android:layout_marginLeft="40dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/ssl_certificate"
                android:layout_column="1" />
            <EditText
                android:id="@+id/etxSSLCertificate"
                android:fontFamily="Tahoma"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="50dp"
                android:layout_column="3" />

            <!--  Row No. 4 -->
            <Space
                android:layout_marginLeft="40dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/web_development"
                android:layout_column="1" />
            <EditText
                android:id="@+id/etxWebDevelopment"
                android:fontFamily="Tahoma"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="50dp"
                android:layout_column="3" />

            <!--  Row No. 5 -->
            <Space
                android:layout_marginLeft="40dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/seo"
                android:layout_column="1" />
            <EditText
                android:id="@+id/etxSEO"
                android:fontFamily="Tahoma"
                android:textSize="24dp"
                android:clickable="false"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="50dp"
                android:layout_column="3" />

            <!--  Row No. 6 -->
            <Space
                android:layout_marginLeft="40dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/subtotal"
                android:layout_column="1" />

            <EditText
                android:id="@+id/etxSubTotal"
                android:fontFamily="tahoma"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="50dp"
                android:layout_column="3" />

            <!--  Row No. 7 -->
            <Space
                android:layout_marginLeft="40dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/gst"
                android:layout_column="1" />

            <EditText
                android:id="@+id/etxGST"
                android:fontFamily="tahoma"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="50dp"
                android:layout_column="3" />

            <!--  Row No. 8 -->
            <Space
                android:layout_marginLeft="40dp"
                android:layout_column="0" />
            <TextView
                android:fontFamily="tahoma"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="260dp"
                android:text="@string/total"
                android:layout_column="1" />

            <EditText
                android:id="@+id/etxTotal"
                android:fontFamily="tahoma"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="24dp"
                android:inputType="numberDecimal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2" />
            <Space
                android:layout_marginRight="50dp"
                android:layout_column="3" />

            <!--  Separator -->
            <Space android:layout_marginBottom="50dp"
                android:layout_columnSpan="4"/>

            <!--  Button -->
            <Button
                android:id="@+id/btnCalculate"
                android:layout_columnSpan="4"
                android:text="Calculate"
                android:layout_gravity="right"/>
        </GridLayout>
    </ScrollView>
</RelativeLayout>
